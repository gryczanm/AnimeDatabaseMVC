@model AnimeDatabase.Application.ViewModels.Anime.AnimeAddViewModel

@{
    ViewData["Title"] = "Add Anime";

}

<h1>Add Anime</h1>
<h4>Complete form to add a new anime</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Synopsis" class="control-label"></label>
                <input asp-for="Synopsis" class="form-control" />
                <span asp-validation-for="Synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimeTypeId" class="control-label">Type</label>
                <select asp-for="AnimeTypeId" class="form-control" asp-items="@(new SelectList(Model.AnimeTypes, "Id", "Name"))"></select>
                <span asp-validation-for="AnimeTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Index" type="button" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

